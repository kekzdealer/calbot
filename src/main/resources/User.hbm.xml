<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="at.kurumi.user.User" table="User">
        <id name="id" column="id" type="integer">
            <generator class="native"/>
        </id>
        <property name="name"  column="name"  type="string" not-null="true"/>
        <property name="discordId"  column="discordId"  type="long"/>
        <set name="userEventRelation" table="userEventRelation" lazy="true">
            <key column="ID_KUNDE"/>
            <many-to-many class="mypackage.Speise" column="ID_SPEISE"/>
        </set>
    </class>
</hibernate-mapping>